@model SacramentMeetingPlanner.Models.Speaker

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this speaker?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SpeakerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpeakerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Topic)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Topic)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="SpeakerID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="Meetings" asp-action="Details" asp-route-id="@ViewData["MeetingID"]" class="btn">Back to List</a>
    </form>
</div>
